<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @prototypes.title %>
      </p>
      <%= link_to @prototypes.user.name, user_path(@prototypes.user.id), class: :prototype__user %>
      <% if user_signed_in? && current_user.id == @prototypes.user.id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_prototype_path(@prototypes.id), class: :prototype__btn, method: :get %>
          <%= link_to "削除する", prototype_path(@prototypes.id), class: :prototype__btn, method: :delete %>
        </div>
      <% end %>
      <div class="prototype__image">
        <%= image_tag @prototypes.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">キャッチコピー</p>
          <p class="detail__message">
            <%= @prototypes.catch_copy %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">コンセプト</p>
          <p class="detail__message">
            <%= @prototypes.concept %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
        <% if user_signed_in? %>
          <%= form_with model: [@prototypes, @comment],local: true do |f|%>
            <div class="field">
              <%= f.label :comment, "コメント" %><br />
              <%= f.text_field :content, id:"comment_content" %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn %>
            </div>
          <% end %>
        <% end %>
        <ul class="comments_lists">
          <% @comments.each do |comment| %>
            <li class="comments_list">
              <%= comment.content %>
              <%= link_to comment.user.name , user_path(comment.user.id), class: :comment_user %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>
